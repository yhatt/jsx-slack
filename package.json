{
  "name": "@speee/jsx-slack",
  "version": "0.0.0",
  "description": "Build JSON for Slack Block Kit from JSX",
  "author": {
    "name": "Yuki Hattori",
    "url": "https://github.com/yhatt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/speee/jsx-slack"
  },
  "license": "MIT",
  "keywords": [
    "slack",
    "block-kit",
    "jsx",
    "notification",
    "bot"
  ],
  "homepage": "https://github.com/speee/jsx-slack#readme",
  "bugs": {
    "url": "https://github.com/speee/jsx-slack/issues"
  },
  "main": "lib/index.js",
  "types": "types/index.js",
  "files": [
    "lib/",
    "types/"
  ],
  "scripts": {
    "build": "rimraf lib && tsc",
    "check:audit": "yarn audit",
    "check:format": "yarn -s format -c",
    "check:ts": "tsc --noEmit",
    "format": "prettier \"**/*.{css,js,json,jsx,md,scss,ts,tsx,yaml,yml}\"",
    "format:write": "yarn -s format --write",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "prepack": "npm-run-all --npm-path yarn -p check:* lint test:coverage -p build types",
    "preversion": "npm-run-all --npm-path yarn -p check:* lint test:coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "types": "rimraf types && tsc --declaration --emitDeclarationOnly --outDir types"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@slack/client": "^4.9.0",
    "@types/jest": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.1.0",
    "jest-junit": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  }
}
